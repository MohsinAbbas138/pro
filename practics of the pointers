#include <iostream>
using namespace std; 
int main ()
{
	int n=5;
	cout <<"n:  "<<n<<endl; 
	//cout <<"*n"<<*n<<endl; 
	cout <<"&n:  "<<&n<<endl; 
	
	int *ptr=&n;
	cout<<*ptr<<endl;
	cout<<ptr<<endl;
	cout <<&ptr<<endl;
	
*ptr =42;
cout <<n<<endl; 	
cout <<&ptr<<endl; 
cout << *ptr<<endl;	
	return 0;
}
